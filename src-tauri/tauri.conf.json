{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run rename-bin && npm run build",
    "beforeDevCommand": "npm run rename-bin && npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "opengoal-launcher",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "$APP/",
          "$APP/iso/*",
          "$APP/*",
          "$APP/**/*",
          "$RESOURCE/**/*"
        ]
      },
      "shell": {
        "scope": [
          {
            "name": "bin/extractor",
            "sidecar": true,
            "cmd": "ignored",
            "args": true
          },
          {
            "name": "bin/gk",
            "sidecar": true,
            "cmd": "ignored",
            "args": true
          },
          {
            "name": "bin/goalc",
            "sidecar": true,
            "cmd": "ignored",
            "args": true
          },
          {
            "name": "bin/glewinfo",
            "sidecar": true,
            "cmd": "ignored",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "bin/extractor",
        "bin/gk",
        "bin/goalc",
        "bin/glewinfo"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "OpenGOAL-Launcher",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "data/"
      ],
      "shortDescription": "",
      "targets": [
        "msi",
        "appimage",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "visible": true,
        "center": true,
        "title": "OpenGOAL Launcher",
        "width": 800
      },
      {
        "title": "OpenGOAL Launcher - Splash",
        "width": 200,
        "height": 300,
        "center": true,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "url": "./src/splash/index.html",
        "label": "splashscreen",
        "visible": false
      }
    ]
  }
}